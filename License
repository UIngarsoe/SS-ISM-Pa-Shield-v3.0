def calculate_psywar_noise(GhostNode_Certainty: float, Network_Anomaly_Score: float) -> float:
    RISK_INVERSE = 1.0 - GhostNode_Certainty
    return max(RISK_INVERSE * Network_Anomaly_Score, 1e-9)

